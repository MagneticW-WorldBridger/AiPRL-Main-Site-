{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "headers": [
    {
      "source": "/voice-test-rings.html",
      "headers": [
        { "key": "Content-Security-Policy", "value": "frame-ancestors 'self' https://woodstock-technical-chatbot-full-fe.vercel.app" },
        { "key": "Permissions-Policy", "value": "microphone=(self \"https://woodstock-technical-chatbot-full-fe.vercel.app\"), autoplay=(self \"https://woodstock-technical-chatbot-full-fe.vercel.app\")" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server.js" },
    { "source": "/elevenlabs-client.js", "destination": "/server.js" },
    { "source": "/girl.png", "destination": "/server.js" },
    { "source": "/voice-rings", "destination": "/voice-test-rings.html" },
    { "source": "/(.*)", "destination": "/public/$1" }
  ]
}

